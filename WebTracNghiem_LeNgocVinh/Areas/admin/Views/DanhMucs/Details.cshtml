@model WebTracNghiem_LeNgocVinh.Models.DanhMucLuat

@{
    ViewBag.Title = "Quản lý danh mục luật > Chi tiết bộ luật";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.iD_DanhMuc)

    <div class="form-group">
        @Html.LabelFor(model => model.tenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenDanhMuc, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.tenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Action("Edit", "DanhMucs", new { iD_DanhMuc = Model.iD_DanhMuc })" class="btn btn-primary">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>&nbsp;
            <a href="@Url.Action("Index", "DanhMucs")" class="btn btn-danger">
                <i class="fas fa-undo-alt"></i> Quay lại
            </a>
        </div>
    </div>
</div>
}
