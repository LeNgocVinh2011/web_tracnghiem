@model WebTracNghiem_LeNgocVinh.Models.DanhMucLuat

@{
    ViewBag.Title = "Quản lý danh mục luật > Xoá bộ luật";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.iD_DanhMuc)

    <div class="form-group">
        @Html.LabelFor(model => model.tenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenDanhMuc, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.tenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <h3 class="text-danger">Bạn có chắc muốn xoá danh mục này ?</h3>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Xác nhận xoá
            </button>&nbsp;
            <a href="@Url.Action("Index", "DanhMucs")" class="btn btn-primary">
                <i class="fas fa-undo-alt"></i> Huỷ bỏ
            </a>
        </div>
    }
</div>
}
