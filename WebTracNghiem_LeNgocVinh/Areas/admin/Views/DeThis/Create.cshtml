@model WebTracNghiem_LeNgocVinh.Models.DeThi

@{
    ViewBag.Title = "Quản lý đề thi > Thêm mới đề thi";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ngayThi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ngayThi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ngayThi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.thoiGianThi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.thoiGianThi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.thoiGianThi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.soCau, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.soCau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.soCau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm mới
            </button>&nbsp;
            <a href="@Url.Action("Index", "DeThis")" class="btn btn-danger">
                <i class="fas fa-undo-alt"></i> Huỷ bỏ
            </a>
        </div>
    </div>
</div>
}
