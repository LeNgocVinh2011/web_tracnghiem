@model WebTracNghiem_LeNgocVinh.Models.PhanQuyen

@{
    ViewBag.Title = "Quản lý phân quyền > Chỉnh sửa quyền";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   <br/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.iD_NguoiDung)

    <div class="form-group">
        <label class="control-label col-md-2">Người dùng</label>
        <div class="col-md-10">
            @Html.DropDownList("iD_NguoiDung", null, htmlAttributes: new { @class = "form-control", disabled = "disabled"})
            @Html.ValidationMessageFor(model => model.iD_NguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.laAdmin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.laAdmin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.laAdmin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.laUser, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.laUser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.laUser, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-success">
            <i class="far fa-save"></i> Lưu thay đổi
        </button>&nbsp;
        <a href="@Url.Action("Index", "PhanQuyens")" class="btn btn-danger">
            <i class="fas fa-undo-alt"></i> Huỷ bỏ
        </a>
    </div>
</div>
}

